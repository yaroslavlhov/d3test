.row.mb-10
  .col-xs-4.col-md-2.col-xs-offset-8.col-md-offset-10
    .input-group
      .input-group-addon
        span.glyphicon.glyphicon-search
      input.form-control(placeholder="Search", ng-model="search")
table.table.table-striped.table-bordered.bg-warning
  thead
    th Name
    th Age
    th Skill
    th Level
    th
  tbody
    tr(ng-repeat="user in getUsers() track by $index")
      td {{user.name}}
      td {{user.age}}
      td {{user.skill}}
      td
        i.fa.text-primary(ng-repeat="level in levels track by $index" ng-class="user.level>level ? 'fa-star': 'fa-star-o'")
      td.text-center
        span.glyphicon.mr-10.glyphicon-edit
        span.glyphicon.glyphicon-remove-circle