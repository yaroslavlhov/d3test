.modal-header
  .row
    .col-sm-10
      h4(ng-show="user.id") Edit user
      h4(ng-show="!user.id") Create user
    .col-sm-2
      button.close(ng-click="close()") Ã—
.modal-body
  .row
    .col-sm-6
      label Name
      input.form-control(type="text" ng-model="user.name" placeholder="Input name here")
    .col-sm-6
      label Age
      select.form-control(ng-options="age as age for age in getArray(99)" ng-model="user.age")
  .row.mt-10
    .col-sm-6
      label Skill
      input.form-control(type="text" ng-model="user.skill" placeholder="Input skill here")
    .col-sm-6
      label Level
      select.form-control(ng-options="level as level for level in getArray(3)" ng-model="user.level")
.modal-footer
  button.btn.btn-success( ng-click="saveUser()")
    span(ng-show="user.id") Save
    span(ng-show="!user.id") Create
  button.btn.btn-danger(ng-click="close()") Cancel